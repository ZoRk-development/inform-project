//- out: ../library.html, pretty: true
extend _base_template

include _mixins

mixin page-header()
  +breadcrumbs("library__breadcrumbs", "", "Библиотека", "", ["index.html", "Главная"], ["Агитатору"], ["Библиотека"])

mixin literatury-item(image, author, name)
  a(href="#" download).download-card.library-block__download-card
    .download-card__image-wrapper.library-block__image-wrapper
      img(src=image).download-card__image
    .library-block__content-wrapper
      .literatury-block__author=author
      .download-card__heading=name
      .library-block__download-card__download.download-card__download.site-block__arrow-link.arrow-link Скачать PDF • 0.78 Мб
       img(src="images/icons/download.svg")
       
mixin library-block()
  .library-block
    .site-block__container.container.adaptive-padding
      .library-block__download-cards.download-cards
        +literatury-item("images/books/cover-2.png", "Максим Горький", "Учитесь мыслить смолоду")
        +literatury-item("images/books/cover-1.png", "Фёдор Гладков", "Империализм грозит всему человечеству")
        +literatury-item("images/books/cover-3.png", "Леонид Леонов", "Учебник логики")
        +literatury-item("images/books/cover-4.png", "Леонид Леонов", "Учебник логики")
        +literatury-item("images/books/cover-5.png", "Леонид Леонов", "Учебник логики")
        +literatury-item("images/books/cover-6.png", "Леонид Леонов", "Учебник логики")
        +literatury-item("images/books/cover-7.png", "Леонид Леонов", "Учебник логики")
        +literatury-item("images/books/cover-8.png", "Леонид Леонов", "Учебник логики")
        +literatury-item("images/books/cover-9.png", "Леонид Леонов", "Учебник логики")
        +literatury-item("images/books/cover-10.png", "Леонид Леонов", "Учебник логики")
        +literatury-item("images/books/cover-11.png", "Леонид Леонов", "Учебник логики")
        +literatury-item("images/books/cover-12.png", "Леонид Леонов", "Учебник логики")
