//- out: ../school.html, pretty: true
extend _base_template

include _mixins
       
mixin literatury-item(image, author, name)
  a(href="#" download).download-card.library-block__download-card
    .download-card__image-wrapper.library-block__image-wrapper
      img(src=image).download-card__image
    .library-block__content-wrapper
      .literatury-block__author=author
      .download-card__heading=name
      .library-block__download-card__download.download-card__download.site-block__arrow-link.arrow-link Скачать PDF • 0.78 Мб
        img(src="images/icons/download.svg")

mixin page-header()
  +breadcrumbs("school__breadcrumbs", "", "Школа", "", ["index.html", "Главная"], ["О Партии"])
  
mixin school-intro-block()
  .school-intro-block.adaptive-padding
    p.intro_block__p В представленных видеоматериалах системно, доступно, наглядно и в то же время на высоком теоретическом уровне раскрывается сущность капитализма, империализма и социализма. 
    p.intro_block__p Курс рассчитан на год, по одному - два занятия в неделю как для индивидуального, так и для группового обучения. Желательно соблюдать последовательность занятий. Система предусматривает обратную связь и возможность проведения вебинаров.

mixin video-card-slide(video_img, count, total, heading, desc)
  .video-card-item__wrapper
    .video-card-item
      a(href="#").video-card-item__image-wrapper.hover-video
        img(src=video_img).hover-video__img.video-card-item__image
      .video-card-item__footer
        .video-card-item__count=count
          span.video-card-item__total  / !{total}
        .video-card-item__content
          .video-card-item__heading=heading
          .video-card-item__desc=desc

mixin dark-video-card-slide(video_img, count, total, heading, desc)
  .video-card-item__wrapper
    .video-card-item
      a(href="#").video-card-item__image-wrapper.hover-video
        img(src=video_img).hover-video__img.video-card-item__image
      .video-card-item__footer
        .dark-block__video-card-item__count.video-card-item__count=count
          span.dark-block__video-card-item__total.video-card-item__total  / !{total}
        .video-card-item__content
          .dark-block__video-card-item__heading.video-card-item__heading=heading
          .dark-block__video-card-item__desc.video-card-item__desc=desc
          
mixin school-videos-slider(slider_id, dark=false)
  .school-videos-slider__wrapper.slider-wrapper
    .school-videos-slider__nav(id=slider_id+"__nav")
      .school-videos-slider__nav__prev.slider__nav__prev.nav__prev-button.nav__btn
        img(src="images/icons/arrow_hover.svg").nav__btn__img.nav__btn__img-rotate
      .school-videos-slider__nav__next.slider__nav__next.nav__next-button.nav__btn
        img(src="images/icons/arrow_hover.svg").nav__btn__img
