mixin responsive-block(name, classes="")
  div(class=name)
    .container(class=classes)
      block

mixin responsive-flex-block(name, classes="")
  div(class=name)
    .container.d-flex(class=classes)
      block

mixin fluid-flex-block(name, classes="")
  div(class=name)
    .fluid-container.d-flex(class=classes)
      block

mixin responsive-grid-3-block(name, classes="")
  div(class=name)
    .container.grid-3(class=classes)
      block

mixin responsive-header-block(name, header, header_classes="", container_classes="")
  +responsive-block(name, container_classes)
    h1.text-center(class=header_classes)=header
    block

mixin responsive-header-flex-block(name, header, header_classes="", block_classes="", container_classes="")
  +responsive-block(name, container_classes)
    h1.text-center(class=header_classes)=header
    .d-flex(class=block_classes)
      block

mixin responsive-header-grid-3-block(name, header, header_classes="", block_classes="", container_classes="")
  +responsive-block(name, container_classes)
    h1.text-center(class=header_classes)=header
    .grid-3(class=block_classes)
      block

mixin li-a(href, classes="")
  li
    a(href=href class=classes)
      block

mixin form-progress(text1, text2, text3)
  .form-progress
    .form-progress__circle
      .form-progress__label-wrapper
        .form-progress__label=text1
    .form-progress__connection
    .form-progress__circle
      .form-progress__label-wrapper
        .form-progress__label=text2
    .form-progress__connection
    .form-progress__circle
      .form-progress__label-wrapper
        .form-progress__label=text3  
      
